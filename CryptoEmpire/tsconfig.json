{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/backend"
  },
  "include": [
    "src/backend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 